# SmartBiz SA Flask Backend - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================

# Cerebras API key for AI chat (llama-3.1-8b model)
# Get your key at: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# ElevenLabs API key for text-to-speech
# Get your key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs voice ID (optional, defaults to 'rachel')
ELEVENLABS_VOICE_ID=rachel

# LiquidMetal API key for SmartSQL natural language queries
# Get your key at: https://liquidmetal.ai/
LIQUIDMETAL_API_KEY=your_liquidmetal_api_key_here

# LiquidMetal base URL (optional, uses default if not set)
# LIQUIDMETAL_BASE_URL=https://api.liquidmetal.ai/v1

# =============================================================================
# Raindrop SmartSQL Bridge Configuration (Optional)
# =============================================================================

# Raindrop Bridge App URL - If configured, SmartSQL queries will use this endpoint
# instead of the LiquidMetal API. Deploy the Bridge App first, then set this URL.
# Example: https://smartbiz-api.your-subdomain.workers.dev/query
# RAINDROP_BRIDGE_URL=https://your-deployed-bridge-app-url/query

# Raindrop API Key (optional, only if your Bridge App requires authentication)
# RAINDROP_API_KEY=your_raindrop_api_key_here

# Raindrop request timeout in seconds (optional, defaults to 30)
# RAINDROP_TIMEOUT=30

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL - SQLite for development, PostgreSQL for production
# SQLite (development): sqlite:///smartbiz.db
# PostgreSQL (production): postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///smartbiz.db

# =============================================================================
# Flask Configuration
# =============================================================================

# Secret key for session management (generate a secure random key for production)
SECRET_KEY=your-secret-key-change-in-production

# Flask environment: development or production
FLASK_ENV=development

# Port for Flask server
FLASK_PORT=5000

# =============================================================================
# CORS Configuration
# =============================================================================

# Frontend URL for CORS (React Vite dev server default)
FRONTEND_URL=http://localhost:5173
